<ul class="nav nav-tabs">
  <li role="presentation">
    {{#link-to 'admin.user.find'}}{{t 'user.find'}}{{/link-to}}
  </li>
  <li role="presentation" class="active">
    {{#link-to 'admin.role.find'}}{{t 'role.find'}}{{/link-to}}
  </li>
  <li role="presentation">
    {{#link-to 'permission_manage'}}{{t 'permission_manage'}}{{/link-to}}
  </li>
</ul>
<br>

<div class="actions">
  <form class="form form-inline"action="{{req.path}}" method="POST">

    <div class="form-group">
      <label>{{t 'role.create'}}</label>
      <input class="form-control" type="text" name="name">
    </div>
    <input type="hidden" name="redirectTo" value="{{req.path}}">

    <button class="btn btn-default" type="submit" name="action" value="create">{{t 'create'}}</button>
  </form>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>{{t 'name'}}</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>
  {{#each data}}
    <tr>
      <td>{{name}}</td>
      <td>
        <form class="form form-inline"action="{{../req.path}}" method="POST">
          <input type="hidden" name="name" value="{{name}}">
          <input type="hidden" name="redirectTo" value="{{../req.path}}">
          <button onclick="return confirm('{{t 'role.delete.confirm.msg'}}');" class="btn btn-default" type="submit" name="action" value="delete">{{t 'delete'}}</button>
        </form>
      </td>
    </tr>
  {{/each}}

  </tbody>
</table>